.containers{
  width: 100vw;
  height:calc(100vh - 103px);
  padding-top: 200rpx;
  background-color:white;
 
}
.userinfo {
  display: flex;
  flex-direction: column; 
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100rpx;
  padding: 30rpx 100rpx;
  box-sizing: border-box;
  border-top: 1px solid gainsboro;
}

.cont image{
  width: 40rpx;
  height: 40rpx;
}
.cont span{
  margin-left: 30rpx;
  line-height: 40rpx;
}