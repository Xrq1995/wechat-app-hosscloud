.page{
  font-size: 15px;
  color: #333;
}
 .weui-cell:before {
  right: 15px;
} 
.kind-list_address{
    line-height: 25px;
    color: #333;
    background: #FFF;
    border-bottom: 1px solid #DFDFDF;
}
 .kind-list__item {
  margin-left: 15px;
  line-height: 25px;
  padding: 10px 10px 10px 0;
  margin: 0 0 0 15px;
  background: #FFF;
  border-bottom: 1px solid #DFDFDF;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
} 
.weui-textarea {
    border-color: #ddd;
    height: 80px;
    margin-top: 10px;
    padding: 10px;
    color: #666;
}


