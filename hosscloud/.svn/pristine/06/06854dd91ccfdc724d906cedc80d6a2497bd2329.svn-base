.icon{
  position:absolute;
  height: 40rpx;
  right: -10rpx;
  top: -4rpx;
  width: 40rpx;
  z-index: 1000;
}
.weui-cell-none {
  padding:10px 15px;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
align-items:center;
}
.weui-cell-none:before {
  top: 0;
  border-top: 1rpx solid #fff !important;
}

.weui-cell-none:after,
.weui-cell-none:before {
  content: " ";
  position: absolute;
  left: 0;
  right: 0;
  height: 2rpx;
  color: #d9d9d9;
}

.weui-cell-none:after {
  bottom: 0;
  border-bottom: 1rpx solid #fff !important;
}