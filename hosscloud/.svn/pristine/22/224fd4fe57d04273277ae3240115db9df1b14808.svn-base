.kind-list_address{
    line-height: 25px;
    padding: 10px;
    color: #333;
    background: #FFF;
    border-bottom: 1px solid #DFDFDF;
}
 .kind-list__item {
  margin-left: 15px;
  line-height: 25px;
  padding: 10px 15px 10px 0;
  background: #FFF;
  background-color: #fff;
  border-radius: 2px;
  overflow: hidden;
} 
.weui-textarea_diy {
    border:1px solid #ddd;
    height: 160rpx;
    padding: 10px;
    color: #666;
    width: calc(100% - 20px);
    margin: 10px auto;
}

.mini-btn {
    margin:0;
    margin-right: 5px;
}

.button_active {
    border: 1px solid #6494F6 !important;
    color: #6494F6 !important;
}
.weui-uploader__file_ph{
  float:left;
